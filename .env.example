# Copy to `.env` for local dev (do NOT commit real secrets).

# Django
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# External authority (Barka management system)
# Must end with `/api` (example: https://your-barka-domain.up.railway.app/api)
PROLEAN_MANAGEMENT_API_BASE_URL=

# Option A (recommended): a service account login (Codex will use it to fetch a cached JWT)
PROLEAN_MANAGEMENT_SERVICE_USERNAME=
PROLEAN_MANAGEMENT_SERVICE_PASSWORD=

# Option B: a JWT token (only if your Barka instance provides it)
PROLEAN_MANAGEMENT_API_TOKEN=

# Live streaming (Agora)
AGORA_APP_ID=
AGORA_APP_CERTIFICATE=

# Optional
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax
